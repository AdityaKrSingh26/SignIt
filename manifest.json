{
  "manifest_version": 2,
  "name": "SignIt",
  "version": "0.1.0",
  "author": "Antoine '0x010C' Lamielle",
  "description": "SignIt translate a word in Sign Language.",
  "homepage_url": "https://lingualibre.fr",
  "applications": {
    "gecko": {
      "id": "signit@lingualibre.fr"
    }
  },
  "icons": {
    "48": "icons/signit-48.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
	"webRequest",
	"webRequestBlocking",
	"storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
      	"node_modules/oojs-ui/dist/oojs-ui-wikimediaui.css"
      ],
      "js": [
      	"node_modules/jquery/dist/jquery.min.js",
      	"node_modules/oojs/dist/oojs.jquery.js",
      	"node_modules/oojs-ui/dist/oojs-ui.js",
      	"node_modules/oojs-ui/dist/oojs-ui-wikimediaui.js",
      	"content_scripts/signit.js"
      ]
    }
  ],
  "background": {
    "scripts": [
		"node_modules/jquery/dist/jquery.min.js",
		"background-script.js"
	]
  }
}
